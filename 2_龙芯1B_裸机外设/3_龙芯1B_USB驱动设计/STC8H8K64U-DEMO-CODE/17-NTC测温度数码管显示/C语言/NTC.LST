 428          /********************  计算温度 ***********************************************/
 429          // 计算结果: 0对应-40.0度, 400对应0度, 625对应25.0度, 最大1600对应120.0度. 
 430          // 为了通用, ADC输入为12bit的ADC值.
 431          // 电路和软件算法设计: Coody
 432          /**********************************************/
 433          
 434          #define     D_SCALE     10      //结果放大倍数, 放大10倍就是保留一位小数
 435          u16 get_temperature(u16 adc)
 436          {
 437   1          u16 code *p;
 438   1          u16 i;
 439   1          u8  j,k,min,max;
 440   1          
 441   1          adc = 4096 - adc;   //Rt接地
 442   1          p = temp_table;
 443   1          if(adc < p[0])      return (0xfffe);
 444   1          if(adc > p[160])    return (0xffff);
 445   1          
 446   1          min = 0;        //-40度
 447   1          max = 160;      //120度
 448   1      
 449   1          for(j=0; j<5; j++)  //对分查表
 450   1          {
 451   2              k = min / 2 + max / 2;
 452   2              if(adc <= p[k]) max = k;
 453   2              else            min = k;
 454   2          }
 455   1               if(adc == p[min])  i = min * D_SCALE;
 456   1          else if(adc == p[max])  i = max * D_SCALE;
 457   1          else    // min < temp < max
 458   1          {
 459   2              while(min <= max)
 460   2              {
 461   3                  min++;
 462   3                  if(adc == p[min])   {i = min * D_SCALE; break;}
 463   3                  else if(adc < p[min])
 464   3                  {
 465   4                      min--;
 466   4                      i = p[min]; //min
 467   4                      j = (adc - i) * D_SCALE / (p[min+1] - i);
 468   4                      i = min;
 469   4                      i *= D_SCALE;
 470   4                      i += j;
 471   4                      break;
 472   4                  }
 473   3              }
 474   2          }
 475   1          return i;
 476   1      }
